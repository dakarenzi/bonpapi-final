---
const {
  title = "Article — Agence BonPapi",
  description = "Découvrez nos articles sur le digital et l'automatisation.",
  date = new Date().toISOString()
} = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph (basic fallback without SEO component) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/placeholder.jpg" />
    <meta property="og:type" content="article" />
    <meta property="article:published_time" content={date} />

  </head>

  <body>

    <main class="blog-article">
      <div class="container">

        <h1 class="title shimmer-gold">{title}</h1>
        <p class="date">
          {new Date(date).toLocaleDateString("fr-FR")}
        </p>

        <article class="content">
          <slot />
        </article>

        <a href="/blog" class="back-btn">← Retour au blog</a>

      </div>
    </main>

  </body>

  <style>
    body {
      background: #0b0818;
      color: white;
      font-family: system-ui, sans-serif;
    }

    .container {
      max-width: 760px;
      margin: auto;
      padding: 2.5rem 1.5rem;
    }

    .title {
      color: var(--gold);
      font-size: 2.4rem;
      margin-bottom: 0.5rem;
    }

    .date {
      opacity: 0.7;
      margin-bottom: 2rem;
    }

    .content p {
      line-height: 1.8;
      margin-bottom: 1.2rem;
      opacity: 0.9;
    }

    .content h2 {
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: var(--gold);
    }

    .back-btn {
      display: inline-block;
      margin-top: 2rem;
      color: var(--gold);
      text-decoration: none;
      font-weight: 600;
    }

    .back-btn:hover {
      text-decoration: underline;
    }
  </style>
</html>
