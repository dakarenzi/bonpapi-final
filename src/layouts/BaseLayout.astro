---
import SEO from "@components/SEO.astro";
import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";

// Accept all props safely with defaults
const {
  title = "Agence BonPapi â€” Agence Digitale Premium",
  description = "Web, branding, IA, automatisation & solutions Cloudflare.",
  image = "/images/placeholder.jpg",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <!-- Universal SEO Component -->
    <SEO
      title={title}
      description={description}
      image={image}
      url={Astro.url.href}
    />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Fallback HTML tags (SEO already inserts main tags, this is extra safety) -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/styles/reset.css" />
    <link rel="stylesheet" href="/styles/variables.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/components.css" />
    <link rel="stylesheet" href="/styles/animations/float.css" />
    <link rel="stylesheet" href="/styles/animations/shimmer.css" />
    <link rel="stylesheet" href="/styles/animations/shineSweep.css" />

    <!-- Icons -->
    <link rel="icon" href="/icons/star.svg" type="image/svg+xml" />
  </head>

  <body>

    <!-- Background Particles -->
    <div id="particles"></div>

    <!-- Navigation -->
    <header>
      <Navigation />
    </header>

    <!-- MAIN CONTENT -->
    <main class="page-wrapper">
      <slot />
    </main>

    <!-- FOOTER -->
    <footer>
      <Footer />
    </footer>

    <!-- Scripts -->
    <script type="module" src="/scripts/scrollReveal.js"></script>
    <script type="module" src="/scripts/particles.js"></script>
    <script type="module" src="/scripts/pageTransitions.js"></script>
    <script type="module" src="/scripts/gsapAnimations.js"></script>

  </body>
</html>
