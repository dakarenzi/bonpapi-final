---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout
  title="Page non trouvée — Erreur 404"
  description="La page que vous cherchez n'existe pas ou a été déplacée."
  image="/images/og/404.jpg"
>

<section class="error-container">
  <h1 class="error-title shimmer-gold">404</h1>
  <p class="error-message">
    Oups... Cette page n'existe pas.
  </p>

  <a href="/" class="back-btn">Retour à l’accueil</a>
</section>

<style>
  .error-container {
    text-align: center;
    padding: 6rem 2rem;
    color: white;
  }
  .error-title {
    font-size: 8rem;
    font-weight: 800;
    color: var(--gold);
  }
  .error-message {
    font-size: 1.4rem;
    opacity: 0.85;
    margin-bottom: 2rem;
  }
  .back-btn {
    padding: 1rem 2rem;
    background: var(--gold);
    color: #0f0a1f;
    border-radius: 12px;
    text-decoration: none;
    transition: 0.3s ease;
  }
  .back-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 18px rgba(255,215,0,0.35);
  }
</style>

</BaseLayout>
