---
import BaseLayout from "@layouts/BaseLayout.astro";
import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";

const title = "Page introuvable — Erreur 404";
const description = "La page que vous cherchez n'existe pas ou a été déplacée.";
---

<BaseLayout title={title} description={description}>
  <Navigation slot="nav" />

  <section class="error-hero">
    <div class="content" data-sr>
      <h1 class="error-code shimmer-gold">404</h1>
      <h2 class="error-title">Page introuvable</h2>
      <p class="error-text">
        Désolé, mais la page que vous recherchez n'existe pas, a été déplacée,
        ou n’est plus disponible.
      </p>

      <a href="/" class="home-btn">Retour à l’accueil</a>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* =======================
        CINEMATIC HERO
  ======================== */
  .error-hero {
    height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;

    background: linear-gradient(135deg, #0b0818, #1a1330);
    position: relative;
    overflow: hidden;
    padding: 2rem;
  }

  /* Floating particles overlay */
  .error-hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background: url("/images/particles-gold.png") center/cover no-repeat;
    opacity: 0.08;
    pointer-events: none;
  }

  .content {
    position: relative;
    z-index: 2;
    max-width: 700px;
  }

  .error-code {
    font-size: 8rem;
    font-weight: 900;
    margin: 0;
    color: var(--gold);
    text-shadow: 0 0 25px rgba(255, 215, 0, 0.5);
    animation: glow 2.2s infinite alternate ease-in-out;
  }

  @keyframes glow {
    from {
      text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
    }
    to {
      text-shadow: 0 0 35px rgba(255, 215, 0, 0.6);
    }
  }

  .error-title {
    font-size: 2rem;
    color: white;
    margin-top: 1rem;
    letter-spacing: 0.5px;
  }

  .error-text {
    color: white;
    opacity: 0.7;
    margin: 1rem 0 2rem 0;
    font-size: 1.2rem;
    line-height: 1.6;
  }

  .home-btn {
    background: var(--gold);
    color: #0f0a1f;
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    display: inline-block;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .home-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 16px rgba(255, 215, 0, 0.4);
  }

  @media (max-width: 900px) {
    .error-code {
      font-size: 5.5rem;
    }
    .error-title {
      font-size: 1.6rem;
    }
    .error-text {
      font-size: 1rem;
    }
  }
</style>
