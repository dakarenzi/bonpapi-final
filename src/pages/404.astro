---
import BaseLayout from "@layouts/BaseLayout.astro";

const title = "Page introuvable — Erreur 404";
const description = "La page que vous cherchez n'existe pas ou a été déplacée.";
---

<BaseLayout title={title} description={description}>

<section class="error-page">
  <h1 class="error-title shimmer-gold">404</h1>
  <p class="error-subtitle">Cette page n’existe pas ou a été supprimée.</p>
  <a href="/" class="error-btn">Retour à l’accueil</a>
</section>

<style>
  .error-page {
    min-height: 70vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background: linear-gradient(135deg, #0b0818, #1a1330);
    padding: 4rem 2rem;
  }

  .error-title {
    font-size: 6rem;
    color: var(--gold);
    font-weight: 800;
  }

  .error-subtitle {
    font-size: 1.3rem;
    color: white;
    opacity: 0.85;
    margin: 1rem 0 2rem;
  }

  .error-btn {
    background: var(--gold);
    color: #0f0a1f;
    padding: 1rem 2rem;
    font-weight: 600;
    border-radius: 12px;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .error-btn:hover {
    transform: translateY(-4px);
  }
</style>

</BaseLayout>
