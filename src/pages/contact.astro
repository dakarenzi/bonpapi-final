---
import BaseLayout from "@layouts/BaseLayout.astro";
import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";
import CTASection from "@components/CTASection.astro";

const title = "Contact — Agence BonPapi";
const description =
  "Contactez l’Agence BonPapi pour un site premium, branding élégant ou automatisation IA. Discutons de votre projet.";
---

<BaseLayout title={title} description={description}>
  <Navigation slot="nav" />

  <!-- ============================================================ -->
  <!--                          HERO                                 -->
  <!-- ============================================================ -->
  <section class="contact-hero">
    <h1 class="hero-title shimmer-gold">Contactez-nous</h1>
    <p class="hero-subtitle">
      Parlez-nous de votre projet — nous reviendrons vers vous dans les 24h.
    </p>
  </section>

  <!-- ============================================================ -->
  <!--                          CONTACT FORM                         -->
  <!-- ============================================================ -->
  <section class="contact-section">
    <div class="contact-grid">

      <!-- =================== FORM =================== -->
      <form class="contact-form" action="/api/contact" method="POST" data-sr>
        <div class="field">
          <label for="name">Nom complet</label>
          <input type="text" id="name" name="name" placeholder="Votre nom" required />
        </div>

        <div class="field">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Votre email" required />
        </div>

        <div class="field">
          <label for="phone">Téléphone</label>
          <input type="text" id="phone" name="phone" placeholder="+221..." />
        </div>

        <div class="field">
          <label for="service">Type de projet</label>
          <select id="service" name="service" required>
            <option value="">Choisir…</option>
            <option value="site">Création de site web</option>
            <option value="branding">Branding & identité visuelle</option>
            <option value="automation">Automatisation IA</option>
            <option value="ecommerce">E-commerce</option>
            <option value="marketing">Marketing digital</option>
            <option value="autre">Autre</option>
          </select>
        </div>

        <div class="field">
          <label for="message">Message</label>
          <textarea id="message" name="message" placeholder="Décrivez votre projet…" rows="6" required></textarea>
        </div>

        <button type="submit" class="submit-btn">Envoyer le message</button>
      </form>

      <!-- =================== CONTACT INFO =================== -->
      <div class="contact-info" data-sr>
        <h3 class="info-title shimmer-gold">Informations</h3>
        <p class="info-line"><strong>Email :</strong> contact@bonpapi.com</p>
        <p class="info-line"><strong>Téléphone :</strong> +221 78 11 67 663</p>
        <p class="info-line"><strong>Adresse :</strong> Dakar, Sénégal</p>
        <p class="info-desc">
          Nous sommes disponibles 7j/7 pour discuter de votre projet et vous proposer
          des solutions digitales premium.
        </p>

        <div class="info-box">
          <h4>Heures d’ouverture</h4>
          <p>Lundi – Samedi : 9h → 20h</p>
        </div>
      </div>

    </div>
  </section>

  <!-- ============================================================ -->
  <!--                            CTA                                -->
  <!-- ============================================================ -->
  <CTASection
    title="Besoin d’un devis rapide ?"
    subtitle="Envoyez-nous votre projet et recevez une réponse sous 24 heures."
    buttonLabel="Commencer"
    buttonLink="/contact"
  />

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* =======================
      HERO
  ======================== */
  .contact-hero {
    text-align: center;
    padding: 5rem 2rem;
    background: linear-gradient(145deg, #0b0818, #1a1330);
  }

  .hero-title {
    font-size: 3rem;
    color: var(--gold);
  }

  .hero-subtitle {
    color: white;
    opacity: 0.85;
    font-size: 1.2rem;
    margin-top: 1rem;
  }

  /* =======================
      CONTACT SECTION
  ======================== */
  .contact-section {
    padding: 4rem 2rem;
  }

  .contact-grid {
    max-width: 1100px;
    margin: auto;
    display: grid;
    gap: 3rem;
    grid-template-columns: 2fr 1fr;
  }

  /* FORM */
  .contact-form {
    background: #0f0a1f;
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid rgba(255, 215, 0, 0.2);
    box-shadow: 0 8px 30px rgba(255, 215, 0, 0.1);
  }

  .field {
    margin-bottom: 1.3rem;
    display: flex;
    flex-direction: column;
  }

  label {
    font-size: 0.95rem;
    color: var(--gold);
    margin-bottom: 6px;
  }

  input,
  textarea,
  select {
    background: #1a1330;
    border: 1px solid rgba(255, 215, 0, 0.25);
    padding: 0.9rem;
    border-radius: 10px;
    color: white;
    font-size: 1rem;
    transition: border 0.25s ease, background 0.25s ease;
  }

  input:focus,
  textarea:focus,
  select:focus {
    border-color: var(--gold);
    background: #221a3f;
    outline: none;
  }

  .submit-btn {
    margin-top: 1.5rem;
    background: var(--gold);
    color: #0f0a1f;
    padding: 1rem;
    border-radius: 10px;
    width: 100%;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .submit-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 18px rgba(255, 215, 0, 0.35);
  }

  /* =======================
      CONTACT INFO
  ======================== */
  .contact-info {
    padding: 2rem;
    border-radius: 16px;
    background: linear-gradient(170deg, #1a1330, #0f0a1f);
    border: 1px solid rgba(255, 215, 0, 0.2);
  }

  .info-title {
    font-size: 1.4rem;
    margin-bottom: 1rem;
  }

  .info-line {
    color: white;
    opacity: 0.85;
    margin: 0.5rem 0;
  }

  .info-desc {
    margin-top: 1.5rem;
    opacity: 0.7;
  }

  .info-box {
    margin-top: 2rem;
    background: rgba(255, 215, 0, 0.06);
    padding: 1rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 215, 0, 0.12);
    color: white;
  }

  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
