---
import BaseLayout from "@layouts/BaseLayout.astro";

const posts = await Astro.glob("./*.md");
---

<BaseLayout
  title="Blog – Agence BonPapi"
  description="Articles, conseils et stratégies digitales par Agence BonPapi : design, branding, IA, automatisation et business."
>

<section class="blog-hero">
  <h1 class="title shimmer-gold">Le Blog de l'Agence BonPapi</h1>
  <p class="subtitle">
    Inspiration, stratégies, design, IA et technologies au service des marques ambitieuses.
  </p>
</section>

<section class="blog-list">
  <div class="grid">
    {posts.sort((a,b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date)).map(post => (
      <a href={post.url} class="card" data-sr>
        <img src="/images/placeholder.jpg" alt={post.frontmatter.title} />

        <div class="content">
          <h3>{post.frontmatter.title}</h3>
          <p>{post.frontmatter.description}</p>
          <span class="date">
            {new Date(post.frontmatter.date).toLocaleDateString("fr-FR")}
          </span>
        </div>
      </a>
    ))}
  </div>
</section>

</BaseLayout>

<style>
  .blog-hero {
    text-align: center;
    padding: 6rem 1.5rem;
    background: linear-gradient(135deg, #0b0818, #1a1330);
  }

  .title {
    font-size: 2.6rem;
    font-weight: 700;
  }

  .subtitle {
    max-width: 700px;
    margin: 1rem auto 0 auto;
    opacity: 0.85;
    color: white;
  }

  .blog-list {
    padding: 4rem 1.5rem;
  }

  .grid {
    max-width: 1200px;
    margin: auto;
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .card {
    background: rgba(255,255,255,0.03);
    border: 1px solid rgba(255,215,0,0.18);
    border-radius: 14px;
    overflow: hidden;
    text-decoration: none;
    color: white;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-6px);
  }

  .card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }

  .card .content {
    padding: 1.4rem 1.2rem;
  }

  .card h3 {
    color: var(--gold);
    margin-bottom: 0.6rem;
  }

  .card p {
    opacity: 0.85;
    margin-bottom: 1rem;
  }

  .date {
    font-size: 0.85rem;
    opacity: 0.7;
  }
</style>
