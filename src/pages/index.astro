---
import BaseLayout from "@layouts/BaseLayout.astro";
import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";

const title = "Agence BonPapi — L’Excellence Digitale : Web, Branding & IA";
const description =
  "Agence BonPapi crée des expériences digitales premium : sites web élégants, branding moderne, IA, automatisation et solutions Cloudflare pour marques ambitieuses.";

// Data for dynamic sections
import ServiceCard from "@components/ServiceCard.astro";
import FeatureCard from "@components/FeatureCard.astro";
import Stats from "@components/Stats.astro";
import PortfolioGrid from "@components/PortfolioGrid.astro";
import TestimonialCard from "@components/TestimonialCard.astro";
import CTASection from "@components/CTASection.astro";

const services = [
  {
    title: "Création de Sites Web",
    description:
      "Des interfaces élégantes, fluides et construites pour convertir.",
    icon: "/icons/service-web.svg",
  },
  {
    title: "Identité Visuelle",
    description: "Branding, logos, chartes graphiques et direction artistique.",
    icon: "/icons/service-brand.svg",
  },
  {
