  { number: "120+", label: "Projets Livrés" },
  { number: "48h", label: "Prototype moyen" },
  { number: "98%", label: "Clients satisfaits" },
  { number: "20+", label: "Secteurs couverts" },
];

const portfolio = [
  {
    image: "/images/portfolio-1.jpg",
    title: "Site Corporate",
    category: "Web Design",
  },
  {
    image: "/images/portfolio-2.jpg",
    title: "Brand Identity",
    category: "Branding",
  },
  {
    image: "/images/portfolio-3.jpg",
    title: "E-commerce",
    category: "Shop",
  },
  {
    image: "/images/portfolio-4.jpg",
    title: "Application Web",
    category: "Développement",
  },
  {
    image: "/images/portfolio-5.jpg",
    title: "Automation Flow",
    category: "IA & Workflow",
  },
  {
    image: "/images/portfolio-6.jpg",
    title: "Landing Page",
    category: "Marketing",
  },
];

const testimonials = [
  {
    name: "Marie Diop",
    role: "Fondatrice — Maison Eclipse",
    quote:
      "BonPapi a totalement transformé notre présence digitale. Une équipe réactive, un design exceptionnel.",
    avatar: "/images/testimonial-1.jpg",
  },
  {
    name: "Ahmed Ba",
    role: "Directeur — TechNova",
    quote:
      "Leur rapidité et leur expertise sont impressionnantes. Du premium, du vrai.",
    avatar: "/images/testimonial-2.jpg",
  },
  {
    name: "Fatou Ndiaye",
    role: "Entrepreneure",
    quote:
      "Le branding, le site, l’automatisation… Tout est devenu plus fluide et plus professionnel.",
    avatar: "/images/testimonial-3.jpg",
  },
