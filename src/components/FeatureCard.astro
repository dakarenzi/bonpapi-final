---
export interface Props {
  title: string;
  description: string;
  icon?: string; // optional icon path
}

const { title, description, icon } = Astro.props;
---

<style>
  .feature-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 215, 0, 0.18);
    padding: 2rem 1.8rem;
    border-radius: 16px;
    position: relative;
    overflow: hidden;
    transition: transform 0.35s ease, box-shadow 0.4s ease, border 0.3s ease;
    backdrop-filter: blur(10px);
  }

  /* Golden sweep animation */
  .feature-card::before {
    content: "";
    position: absolute;
    left: -120%;
    top: 0;
    width: 250%;
    height: 100%;
    background: linear-gradient(
      120deg,
      transparent,
      rgba(255, 215, 0, 0.25),
      transparent
    );
    opacity: 0;
    transform: skewX(-20deg);
    transition: opacity 0.3s ease;
  }

  .feature-card:hover::before {
    opacity: 1;
    animation: goldSweep 1.25s linear;
  }

  @keyframes goldSweep {
    0% { transform: translateX(-80%) skewX(-20deg); }
    100% { transform: translateX(80%) skewX(-20deg); }
  }

  .feature-card:hover {
    transform: translateY(-6px);
    border-color: rgba(255, 215, 0, 0.35);
    box-shadow: 0 8px 22px rgba(255, 215, 0, 0.22);
  }

  /* Icon */
  .icon {
    width: 48px;
    height: 48px;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;

    border-radius: 12px;
    background: rgba(255, 215, 0, 0.1);
    border: 1px solid rgba(255, 215, 0, 0.25);
  }

  .icon img {
    width: 28px;
    height: 28px;
    filter: drop-shadow(0px 0px 4px rgba(255, 215, 0, 0.5));
  }

  .title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--gold);
    margin-bottom: 0.6rem;
    letter-spacing: 0.4px;
  }

  .description {
    font-size: 0.95rem;
    opacity: 0.85;
    line-height: 1.55;
  }
</style>

<div class="feature-card" data-sr>
  {icon && (
    <div class="icon shimmer-gold">
      <img src={icon} alt="Icône fonctionnalité" />
    </div>
  )}

  <div class="title">{title}</div>
  <p class="description">{description}</p>
</div>
