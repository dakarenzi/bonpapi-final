---
const {
  title = "Agence BonPapi â€” Agence Digitale Premium",
  description = "Web design haut de gamme, branding immersif, IA, automatisation et solutions Cloudflare.",
  image = "/images/placeholder.jpg",
  url = Astro.url?.href || "https://agence.bonpapi.com",
} = Astro.props;

// Ensure absolute URL for OG tags
const absoluteImage = image.startsWith("http")
  ? image
  : new URL(image, url).href;
---

<!-- ============================ -->
<!--         CORE SEO TAGS        -->
<!-- ============================ -->
<title>{title}</title>
<meta name="description" content={description} />

<!-- Canonical -->
<link rel="canonical" href={url} />

<!-- Charset & Language -->
<meta charset="UTF-8" />
<meta http-equiv="Content-Language" content="fr" />

<!-- ============================ -->
<!--        OPEN GRAPH TAGS       -->
<!-- ============================ -->
<meta property="og:type" content="website" />
<meta property="og:site_name" content="Agence BonPapi" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:image" content={absoluteImage} />
<meta property="og:image:secure_url" content={absoluteImage} />
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:locale" content="fr_FR" />

<!-- ============================ -->
<!--      TWITTER CARD TAGS       -->
<!-- ============================ -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={absoluteImage} />

<!-- ============================ -->
<!--      STRUCTURED DATA         -->
<!-- ============================ -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Agence BonPapi",
  "description": "{description}",
  "url": "{url}",
  "logo": "https://agence.bonpapi.com/icons/star.svg",
  "image": "{absoluteImage}",
  "sameAs": [
    "https://instagram.com/bonpapi",
    "https://facebook.com/bonpapi",
    "https://linkedin.com/company/bonpapi"
  ]
}
</script>
