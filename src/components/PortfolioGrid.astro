---
export interface PortfolioItem {
  image: string;
  title: string;
  category: string;
  link?: string;
}

export interface Props {
  items: PortfolioItem[];
}

const { items } = Astro.props;
---

<style>
  .portfolio-section {
    padding: 4rem 1.5rem;
    background: rgba(255, 255, 255, 0.02);
  }

  .portfolio-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(3, 1fr);
  }

  /* Card container */
  .portfolio-item {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    border: 1px solid rgba(255, 215, 0, 0.12);
    transition: transform 0.35s ease, box-shadow 0.35s ease;
  }

  .portfolio-item:hover {
    transform: translateY(-6px);
    box-shadow: 0px 10px 26px rgba(255, 215, 0, 0.25);
  }

  /* Image */
  .portfolio-img {
    width: 100%;
    height: 260px;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .portfolio-item:hover .portfolio-img {
    transform: scale(1.08);
  }

  /* Gold overlay effect */
  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      0deg,
      rgba(15, 10, 31, 0.8),
      rgba(15, 10, 31, 0.1)
    );
    opacity: 0;
    transition: opacity 0.35s ease;
  }

  .portfolio-item:hover .overlay {
    opacity: 1;
  }

  /* Text content */
  .portfolio-info {
    position: absolute;
    bottom: 1.2rem;
    left: 1.2rem;
    z-index: 2;
  }

  .portfolio-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--gold);
    margin-bottom: 0.3rem;
  }

  .portfolio-cat {
    color: white;
    opacity: 0.85;
    font-size: 0.95rem;
  }

  /* Responsive */
  @media (max-width: 1000px) {
    .portfolio-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 700px) {
    .portfolio-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="portfolio-section" data-sr>
  <div class="portfolio-grid">
    {items.map((item) => (
      <a class="portfolio-item" href={item.link ?? "#"} target="_blank">

        <img class="portfolio-img" src={item.image} alt={item.title} />

        <div class="overlay"></div>

        <div class="portfolio-info">
          <div class="portfolio-title shimmer-gold">{item.title}</div>
          <div class="portfolio-cat">{item.category}</div>
        </div>

      </a>
    ))}
  </div>
</section>
