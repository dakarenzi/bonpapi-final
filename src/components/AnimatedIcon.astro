---
export interface Props {
  icon: string;  // path to SVG
  size?: number; // px
  goldGlow?: boolean;
  float?: boolean;
}

const {
  icon,
  size = 48,
  goldGlow = true,
  float = true,
} = Astro.props;
---

<style>
  .icon-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.35s ease;
  }

  /* Floating animation */
  .float {
    animation: floatIcon 3.5s ease-in-out infinite;
  }

  @keyframes floatIcon {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-6px); }
    100% { transform: translateY(0px); }
  }

  /* Gold glow pulse */
  .gold-glow {
    filter: drop-shadow(0px 0px 6px rgba(255, 215, 0, 0.55));
    animation: glowPulse 2.8s ease-in-out infinite;
  }

  @keyframes glowPulse {
    0% { filter: drop-shadow(0px 0px 4px rgba(255, 215, 0, 0.35)); }
    50% { filter: drop-shadow(0px 0px 10px rgba(255, 215, 0, 0.6)); }
    100% { filter: drop-shadow(0px 0px 4px rgba(255, 215, 0, 0.35)); }
  }
</style>

<div
  class="icon-wrapper
    {float ? 'float' : ''}
    {goldGlow ? 'gold-glow' : ''}"
  style={`width:${size}px; height:${size}px;`}
>
  <img
    src={icon}
    alt="IcÃ´ne"
    width={size}
    height={size}
    style="object-fit:contain;"
  />
</div>
